# Application
NODE_ENV=development
PORT=4000

# Database Configuration
# Option 1: Use individual database variables (recommended)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=rouptimize_db

# Option 2: Or use DATABASE_URL (takes precedence if both are set)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rouptimize_db

# Database Connection Pool
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=2000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Frontend Configuration
FRONTEND_WEB_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookie Configuration (for authentication cookies)
COOKIE_DOMAIN=localhost
COOKIE_SAME_SITE=Lax

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MQTT Configuration (IoT device communication)
MQTT_URL=mqtt://mqtt:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# RabbitMQ Configuration (Message Queue)
RABBITMQ_URI=amqp://guest:guest@rabbitmq:5672
RABBITMQ_PREFETCH=10

# Route Optimization Services
VROOM_URL=http://localhost:3001
OSRM_URL=http://localhost:5000

# Super Admin Seeding
SEED_SUPER_ADMIN=true
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=superadminpassword
SUPER_ADMIN_EMAIL=superadmin@example.com

# Swagger/API Documentation
SWAGGER_USERNAME=
SWAGGER_PASSWORD=
