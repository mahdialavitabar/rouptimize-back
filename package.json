{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=../../.env.development --watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "bun --env-file=../../.env dist/main.js",
    "start:dev": "bun --env-file=../../.env.development dist/main.js",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:migrate:dev": "NODE_ENV=development drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:push": "drizzle-kit push",
    "drizzle:push:dev": "NODE_ENV=development drizzle-kit push",
    "drizzle:pull": "drizzle-kit pull",
    "drizzle:pull:dev": "NODE_ENV=development drizzle-kit pull",
    "drizzle:studio": "NODE_ENV=development drizzle-kit studio --port 8989",
    "db:reset": "NODE_ENV=development bun src/scripts/reset-database.ts",
    "drizzle:introspect": "drizzle-kit introspect",
    "test:multi-tenancy": "bun src/scripts/test-multi-tenancy.ts",
    "test:rls-force": "bun src/scripts/test-rls-force.ts"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.0",
    "amqplib": "^0.10.9",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "express-basic-auth": "^1.2.1",
    "ioredis": "^5.6.1",
    "joi": "^18.0.2",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.3",
    "@types/ms": "^2.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
